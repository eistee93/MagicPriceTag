<Window
    x:Class="WPFUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prop="clr-namespace:WPFUI.Properties"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="{x:Static prop:Resources.strAppToken}" />
            <TextBox Text="{Binding AppToken, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{x:Static prop:Resources.strAppSecret}" />
            <TextBox Text="{Binding AppSecret, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{x:Static prop:Resources.strAccesToken}" />
            <TextBox Text="{Binding AccessToken, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{x:Static prop:Resources.strAccessSecret}" />
            <TextBox Text="{Binding AccessSecret, UpdateSourceTrigger=PropertyChanged}" />
            <Button Command="{Binding DoStuffCommand}">
                <TextBlock Text="{x:Static prop:Resources.strLogIn}" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
